@model IEnumerable<OnlineJobPortal.Models.Job>
<div class="container">
    <!-- Count of Job list Start -->
    <div class="row">
        <div class="col-lg-12">
            <div class="count-job mb-35">
                <span>@Model.Count() Jobs found</span>
                <!-- Select job items start -->
                @*<div class="select-job-items">
                        <span>Sort by</span>
                        <select name="select">
                            <option value="">None</option>
                            <option value="">job list</option>
                            <option value="">job list</option>
                            <option value="">job list</option>
                        </select>
                    </div>*@
                <!--  Select job items End-->
            </div>
        </div>
    </div>
    <!-- Count of Job list End -->
    @foreach (var item in Model)
    {
        <!-- single-job-content -->
        <div class="single-job-items mb-30">
            <div class="job-items">
                <div class="company-img">
                    <a href="/Jobs/Detail/@item.JobId"><img src="/assets/img/logo/@item.CompanyImage" alt="" style="width:100px"></a>
                </div>
                <div class="job-tittle job-tittle2">
                    <a href="/Jobs/Detail/@item.JobId">
                        <h4>@item.Title</h4>
                    </a>
                    <ul>
                        <li>@item.CompanyImage</li>
                        <li><i class="fas fa-map-marker-alt"></i>@item.State, @item.Country</li>
                        <li>@item.Salary</li>
                    </ul>
                </div>
            </div>
            <div class="items-link items-link2 f-right">
                <a href="/Jobs/Detail/@item.JobId">@item.JobType</a>
                <span>@item.LastDateToApply</span>
            </div>
        </div>
    }
</div>