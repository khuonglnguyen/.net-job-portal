
@{
    ViewBag.Title = "EditRemuse";
    Layout = "~/Views/Shared/_Layout.cshtml";

    var listCountry = ViewBag.listCountry as IEnumerable<OnlineJobPortal.Models.Country>;
    var user = Session["User"] as OnlineJobPortal.Models.User;
}

<section>
    <div class="container pt-50 pb-40">
        <div class="row">
            @if (ViewBag.message != null)
            {
                <div class="col-12 pb-20">
                    <span id="ContentPlaceHolder1_lblMsg" class="alert alert-success">Resume details updated successful..!</span>
                </div>
            }
            <div class="col-12">
                <h2 class="contact-title text-center">Build Resume</h2>
            </div>
            <div class="col-lg-12">
                <form action="/User/EditResume" method="post" enctype="multipart/form-data">
                    <input hidden name="userId" value="@user.UserId" />
                    <div class="form-contact contact_form">
                        <div class="row">
                            <div class="col-12">
                                <h6>Personal Information</h6>
                            </div>

                            <div class="col-md-6 col-sm-12">
                                <div class="form-group">
                                    <label>Full Name</label>
                                    <input name="name" type="text" value="@user.Name" id="ContentPlaceHolder1_txtFullName" class="form-control" placeholder="Enter Full Name" required />
                                    <span id="ContentPlaceHolder1_RegularExpressionValidator1" style="color:Red;font-size:Small;display:none;">Name must be in characters</span>
                                </div>
                            </div>

                            <div class="col-md-6 col-sm-12">
                                <div class="form-group">
                                    <label>Username</label>
                                    <input name="username" type="text" value="@user.Username" id="ContentPlaceHolder1_txtUserName" class="form-control" placeholder="Enter Unique Username" required />
                                </div>
                            </div>

                            <div class="col-md-6 col-sm-12">
                                <div class="form-group">
                                    <label>Address</label>
                                    <textarea name="address" rows="2" cols="20" id="ContentPlaceHolder1_txtAddress" class="form-control" placeholder="Enter Address" required>
@user.Address</textarea>
                                </div>
                            </div>

                            <div class="col-md-6 col-sm-12">
                                <div class="form-group">
                                    <label>Mobile Number</label>
                                    <input name="mobile" type="text" value="@user.Mobile" id="ContentPlaceHolder1_txtMobile" class="form-control" placeholder="Enter Mobile Number" required />
                                    <span id="ContentPlaceHolder1_RegularExpressionValidator2" style="color:Red;font-size:Small;display:none;">Mobile No. must have 10 digits</span>
                                </div>
                            </div>

                            <div class="col-md-6 col-sm-12">
                                <div class="form-group">
                                    <label>Email</label>
                                    <input name="email" type="email" value="@user.Email" id="ContentPlaceHolder1_txtEmail" class="form-control" placeholder="Enter Email" required />
                                </div>
                            </div>

                            <div class="col-md-6 col-sm-12">
                                <div class="form-group">
                                    <label>Country</label>
                                    <select name="ctl00$ContentPlaceHolder1$ddlCountry" id="ContentPlaceHolder1_ddlCountry" class="form-control w-100">
                                        <option value="0">Select Country</option>
                                        @foreach (var item in listCountry)
                                        {
                                            if (item.CountryName == user.Country)
                                            {
                                                <option value="@item.CountryName" selected>@item.CountryName</option>
                                            }
                                            else
                                            {
                                                <option value="@item.CountryName">@item.CountryName</option>
                                            }
                                        }
                                    </select>
                                    <span id="ContentPlaceHolder1_RequiredFieldValidator1" style="color:Red;font-size:Small;display:none;">Country is required</span>

                                </div>
                            </div>

                            <div class="col-12 pt-4">
                                <h6>Education/Resume Information</h6>
                            </div>

                            <div class="col-md-6 col-sm-12">
                                <div class="form-group">
                                    <label>10th Percentage/Grade</label>
                                    <input name="tenthGrade" type="text" value="@user.TenthGrade" id="ContentPlaceHolder1_txtTenth" class="form-control" placeholder="Ex: 90%" />
                                </div>
                            </div>

                            <div class="col-md-6 col-sm-12">
                                <div class="form-group">
                                    <label>12th Percentage/Grade</label>
                                    <input name="twelfthGrade" value="@user.TwelfthGrade" type="text" id="ContentPlaceHolder1_txtTwelfth" class="form-control" placeholder="Ex: 90%" />
                                </div>
                            </div>

                            <div class="col-md-6 col-sm-12">
                                <div class="form-group">
                                    <label>Graduation with Pointer/Grade</label>
                                    <input name="graduationGrade" value="@user.GraduationGrade" type="text" id="ContentPlaceHolder1_txtGraduation" class="form-control" placeholder="Ex: BTech with 9.2 pointer" />
                                </div>
                            </div>

                            <div class="col-md-6 col-sm-12">
                                <div class="form-group">
                                    <label>Post Graduation with Pointer/Grade</label>
                                    <input name="postGraduationGrade" value="@user.PostGraduationGrade" type="text" id="ContentPlaceHolder1_txtPostGraduation" class="form-control" placeholder="Ex: MTech with 9.2 pointer" />
                                </div>
                            </div>

                            <div class="col-md-6 col-sm-12">
                                <div class="form-group">
                                    <label>PHD with Percentage/Grade</label>
                                    <input name="phd" value="@user.Phd" type="text" id="ContentPlaceHolder1_txtPhd" class="form-control" placeholder="PHD with Grade" />
                                </div>
                            </div>

                            <div class="col-md-6 col-sm-12">
                                <div class="form-group">
                                    <label>Job Profile/Works On</label>
                                    <input name="worksOn" value="@user.WorksOn" type="text" id="ContentPlaceHolder1_txtWork" class="form-control" placeholder="Job Profile" />
                                </div>
                            </div>

                            <div class="col-md-6 col-sm-12">
                                <div class="form-group">
                                    <label>Work Experience</label>
                                    <input name="experience" value="@user.Experience" type="text" id="ContentPlaceHolder1_txtExperience" class="form-control" placeholder="Work Experience" />
                                </div>
                            </div>

                            <div class="col-md-6 col-sm-12">
                                <div class="form-group">
                                    <label>Resume</label>
                                    <input type="file" name="resume" value="@user.Resume" id="ContentPlaceHolder1_fuResume" title=".doc, .docx, .pdf extension only" class="form-control pt-2" />
                                </div>
                            </div>

                        </div>
                        <div class="form-group mt-3">
                            <input type="submit" name="ctl00$ContentPlaceHolder1$btnUpdate" value="Update" onclick="javascript:WebForm_DoPostBackWithOptions(new WebForm_PostBackOptions(&quot;ctl00$ContentPlaceHolder1$btnUpdate&quot;, &quot;&quot;, true, &quot;&quot;, &quot;&quot;, false, false))" id="ContentPlaceHolder1_btnUpdate" class="button button-contactForm boxed-btn mr-4" />
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</section>